<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/pay_bizz_orange"
    android:weightSum="125"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/serial_no_id"
        style="@style/PBReportTableHorzTV"
        android:text="@string/serial_no"
        android:layout_weight="15"/>
    <View style="@style/PB_Dummy_View" />

    <TextView
        android:id="@+id/tranc_date_id"
        style="@style/PBReportTableHorzTV"
        android:text="@string/tnx_date"
        android:layout_weight="25"/>
    <View style="@style/PB_Dummy_View" />

    <TextView
        android:id="@+id/amt_id"
        style="@style/PBReportTableHorzTV"
        android:text="@string/amt"
        android:layout_weight="24"/>
    <View style="@style/PB_Dummy_View" />

    <TextView
        android:id="@+id/mode_id"
        style="@style/PBReportTableHorzTV"
        android:text="@string/mode"
        android:layout_weight="16"/>
    <View style="@style/PB_Dummy_View" />

    <TextView
        android:id="@+id/status_id"
        style="@style/PBReportTableHorzTV"
        android:text="@string/status"
        android:layout_weight="17"/>
    <View style="@style/PB_Dummy_View" />

    <TextView
        android:id="@+id/tnx_id"
        style="@style/PBReportTableHorzTV"
        android:text="@string/tnx_no"
        android:layout_weight="23"/>

</LinearLayout>
