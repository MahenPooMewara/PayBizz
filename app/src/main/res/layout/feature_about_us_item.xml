<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    app:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/pan_center_rl"
            style="@style/PBGenericMPWC"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">

            <RelativeLayout
                style="@style/PBServiceRL"
                android:layout_width="280dp"
                android:background="@drawable/service_background_grey">

                <TextView
                    android:id="@+id/feature_au_tv"
                    style="@style/PBServiceDescTTV"/>

                <TextView
                    android:id="@+id/feature_au_desc_tv"
                    style="@style/PBServiceDescTV"
                    android:maxLines="3"
                    android:layout_below="@+id/feature_au_tv"/>
            </RelativeLayout>

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/img_rv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:gravity="bottom"
        android:background="@color/pb_features_bg"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/feature_au_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_margin="4dp"/>
    </RelativeLayout>
</RelativeLayout>


