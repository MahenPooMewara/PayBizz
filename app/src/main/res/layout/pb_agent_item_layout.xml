<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="345dp"
    android:layout_height="wrap_content"
    android:background="@color/pb_features_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/service_background_grey"
        android:padding="8dp">

        <TextView
            android:id="@+id/agent_comment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:text="@string/surendra_desc"
            android:textColor="@color/pay_bizz_footer_disc"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/agent_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agent_comment_tv"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/surendra"
            android:textColor="@color/black"
            android:textSize="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agent_item_rl"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pb_agent_profile">

        <ImageView
            android:id="@+id/agent_profile_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"/>
    </RelativeLayout>


</RelativeLayout>