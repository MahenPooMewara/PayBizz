<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/export_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/export_table"
        android:textColor="@color/black"
        android:textSize="28dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/take_report_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="106">

        <View style="@style/PB_Dummy_View" />

        <TextView
            android:id="@+id/copy_table"
            style="@style/PBExportTableTTV"
            android:background="@color/copy_color"
            android:text="@string/pb_copy"
            tools:ignore="MissingConstraints" />

        <View style="@style/PB_Dummy_View" />

        <TextView
            android:id="@+id/csv_table"
            style="@style/PBExportTableTTV"
            android:background="@color/csv_color"
            android:text="@string/csv"
            tools:ignore="MissingConstraints" />

        <View style="@style/PB_Dummy_View" />

        <TextView
            android:id="@+id/excel_table"
            style="@style/PBExportTableTTV"
            android:background="@color/excel_color"
            android:text="@string/excel"
            tools:ignore="MissingConstraints" />

        <View style="@style/PB_Dummy_View" />

        <TextView
            android:id="@+id/pdf_table"
            style="@style/PBExportTableTTV"
            android:background="@color/pdf_color"
            android:text="@string/pdf"
            tools:ignore="MissingConstraints" />

        <View style="@style/PB_Dummy_View" />

        <TextView
            android:id="@+id/print_table"
            style="@style/PBExportTableTTV"
            android:background="@color/print_color"
            android:text="@string/print"
            tools:ignore="MissingConstraints" />

        <View style="@style/PB_Dummy_View" />
    </LinearLayout>
</LinearLayout>