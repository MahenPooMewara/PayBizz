<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PBOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PBEditBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PBTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PBAutoCompleteText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="PBOutlinedDropBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="PBGenericMPWC">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">""</item>
    </style>

    <style name="PBLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/pay_bizz_logo</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/typo_graphica_demo</item>
    </style>

    <style name="PB_Dummy_View">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PB_Button_View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="PBCaptionTitle" parent="@style/PBTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">24dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lobster_otf</item>
    </style>

    <style name="PBCaptionRefreshIV">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:src">@drawable/refresh</item>
    </style>

    <style name="PBLogoFooter" parent="@style/PBLogo">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/pay_bizz_logo</item>
    </style>

    <style name="PBLogoFooterIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/footer_icon_pb</item>
    </style>

    <style name="PBLogoFooterIconNxt" parent="@style/PBLogoFooterIcon">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="PBFooterIconImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PBFooterGenericView" parent="@style/PBGenericMPWC">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="PBFooterGenericViewTV" parent="@style/PBFooterGenericView">
        <item name="android:textColor">@color/pay_bizz_footer_disc</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="PBFooterTitleTV" parent="@style/PBFooterGenericView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PBGenericWCWC">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PBFooterGenericTitle" parent="@style/PBGenericWCWC">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/pay_bizz_footer_disc</item>
    </style>

    <style name="PBFooterGenericTitleNxt" parent="@style/PBFooterGenericViewTV">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="PBServiceCompDetailsNo" parent="@style/PBFooterGenericViewTV">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="PBServiceCompDetailsTitle" parent="@style/PBFooterGenericViewTV">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PBServiceRL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PBServiceTTV" parent="PBGenericMPWC">
        <item name="android:textSize">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/pay_bizz_green</item>
        <item name="android:text">@string/pan_center</item>
    </style>

    <style name="PBServiceDescTTV" parent="PBGenericWCWC">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/pay_bizz_green</item>
    </style>

    <style name="PBServiceDescTV" parent="@style/PBServiceDescTTV">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">44dp</item>
        <item name="android:layout_marginStart">44dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxLines">5</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="PBServiceTV" parent="@style/PBServiceTTV">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/pay_bizz_footer_disc</item>
    </style>

    <style name="PBServiceImg">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">-16dp</item>
        <item name="android:layout_marginStart">-16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="PBServiceCompDetailsImg" parent="@style/PBGenericWCWC">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:src">@android:drawable/ic_menu_call</item>
    </style>

    <style name="PBHomeFragmentTitleScroll" parent="@style/PBGenericWCWC">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">20dp</item>

        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="PBHFTVCenterHorizontal" parent="@style/PBHomeFragmentTitleScroll">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="PBFeatureImg">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="PBFeatureTTV" parent="PBGenericMPWC">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/pay_bizz_green</item>
    </style>

    <style name="PBFeatureTDTV" parent="PBFeatureTTV">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/pay_bizz_footer_disc</item>
    </style>

    <style name="PBContactTV" parent="PBEditBox">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="PBContactTVLY" parent="PBOutlinedBox">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="PBContactInfoTV" parent="@style/PBFooterGenericTitleNxt">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="PBReportTableTV" parent="PBGenericWCWC">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PBReportTableHorzTV" parent="PBReportTableTV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">20</item>
    </style>

    <style name="PBExportTableTTV">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">20</item>
    </style>


</resources>